<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">


    <SwitchPreference
            android:title="隐藏桌面图标"
            android:key="hideLauncherIcon"
            android:defaultValue="false"
            android:summary=""/>
    <PreferenceCategory
            android:title="基础设置"/>

    <SwitchPreference
            android:title="总开关"
            android:key="lyricService"
            android:defaultValue="true"
            android:summary=""/>

    <EditTextPreference
            android:title="歌词宽度"
            android:key="lyricWidth"
            android:defaultValue="-1"
            android:summary="自适应"/>

    <EditTextPreference
            android:title="歌词自适应最大宽度"
            android:key="lyricMaxWidth"
            android:defaultValue="-1"
            android:summary="关闭"/>

    <EditTextPreference
            android:title="歌词颜色"
            android:key="lyricColour"
            android:defaultValue="自适应"
            android:summary="自适应"/>

    <SwitchPreference
            android:title="歌词图标"
            android:key="lyricIcon"
            android:defaultValue="true"
            android:summary=""/>

    <SwitchPreference
            android:title="图标自动反色"
            android:key="iconAutoColor"
            android:defaultValue="true"
            android:summary=""/>

    <PreferenceCategory
            android:title="高级设置"/>

    <SwitchPreference
            android:title="歌曲暂停关闭歌词"
            android:key="lyricOff"
            android:defaultValue="true"
            android:summary=""/>

    <SwitchPreference
            android:title="隐藏通知图标"
            android:key="hideNoticeIcon"
            android:defaultValue="false"
            android:summary="自动隐藏通知图标"/>

    <SwitchPreference
            android:title="隐藏实时网速"
            android:key="hideNetWork"
            android:defaultValue="true"
            android:summary="自动隐藏实时网速"/>

    <SwitchPreference
            android:title="隐藏锁屏运营商名称"
            android:key="hideCUK"
            android:defaultValue="false"
            android:summary="自动隐藏锁屏运营商名称"/>

    <SwitchPreference
            android:title="Debug模式"
            android:key="debug"
            android:defaultValue="false"
            android:summary=""/>

    <PreferenceScreen
            android:title="重启系统界面"
            android:key="restartUI"
            android:summary="lsp激活后需重启系统界面生效，edxp需重启手机"/>

    <Preference
            android:key="reset"
            android:summary="如果出现某些莫名其妙的问题请点击此处"
            android:title="重置模块"/>


    <PreferenceCategory app:title="关于"/>
    <Preference
            android:key="ver_explain"
            android:summary=""
            android:title="版本说明"/>


    <Preference
            android:key="author"
            android:summary="GitHub (577fkj &amp;&amp; xiaowine)"
            android:title="开发者"/>

    <Preference
            android:key="Sourcecode"
            android:summary="https://github.com/577fkj/MIUIStatusBarlyric_new"
            android:title="项目地址">
        <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/577fkj/MIUIStatusBarlyric_new"/>
    </Preference>

    <Preference
            android:key="CheckUpdate"
            android:summary=""
            android:title="检查更新"/>


</PreferenceScreen>